{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": false
  },
  "include": ["src/**/*"]
}
